@page
@model MascotaFeliz.App.Frontend.Pages.ListaVisitasModel
@{
}

        <div class="cont-botones">
           <div>
                 Numero de Historia: @Model.historia.Id
           </div>   
           <div>
                 Fecha De Apertura: @Model.historia.FechaInicial
           </div>   
           <div>
                 Mascota: @Model.mascota.Nombre
           </div>  
           <div>
                 Especie: @Model.mascota.Especie
           </div> 
        </div>

        <div class="cont-tabla">
            <table class="tabla">
                <tr>
                    <th>FechaVisita</th>
                    <th>Detalles</th>
                    <th>Eliminar</th>
                </tr>
            
                @foreach (var visita in Model.listaVisitas)
                {
                    <tr>
                    <td>@visita.FechaVisita</td>
                    <td>
                        <a class="btn-a" asp-page="./DetallesVisita" asp-route-visitaId="@visita.Id" asp-route-historiaId="@Model.historia.Id" asp-route-mascotaId="@Model.mascota.Id">
                            <img src="~/images/detalle.png" style="width:30px ;" alt="detalles">
                        </a>
                    </td>

                    <td>
                        <a class="btn-a" asp-page="./ListaVisitas" asp-route-visitaId="@visita.Id" asp-route-historiaId="@Model.historia.Id" asp-route-mascotaId="@Model.mascota.Id">
                            <img src="~/images/delete-bin-5-line.png" alt="eliminar">
                        </a>    
                    </td>
                </tr>
                }
            </table>
        </div>
<div>
<a asp-area="" asp-page="/Mascotas/DetallesMascotas" asp-route-mascotaId="@Model.mascota.Id">Volver A detalles mascota</a>
</div>
