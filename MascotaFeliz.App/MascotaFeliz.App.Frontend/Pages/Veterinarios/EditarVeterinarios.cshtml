@page
@model MascotaFeliz.App.Frontend.Pages.EditarVeterinariosModel
@{
      int veterinarioId = Model.veterinario.Id;  
}




<head>
    <link rel="stylesheet" href="~/css/styleCard.css" />
    <link rel="stylesheet" href="~/css/stylesFormulario.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

</head>

<main class="container mt-5">
    <div class="row">
        <div class="col-md-3" id="form" style="text-align:left">
            <h1>Editar Veterinario</h1>

            <form method="post">

                <input type="hidden" asp-for="veterinario.Id">

                <input asp-for="veterinario.Cedula" id="controls" type="text" class="form-control mb-3"
                    placeholder="Cedula">
                <br>
                <input asp-for="veterinario.Nombres" id="controls" type="text" class="form-control mb-3" placeholder="Nombres">
                <br>
                <input asp-for="veterinario.Apellidos" id="controls" type="text" class="form-control mb-3"
                    placeholder="Apellidos">
                <br>
                <input asp-for="veterinario.Direccion" id="controls" type="text" class="form-control mb-3" placeholder="Direccion">
                <br>
                <br>
                <input asp-for="veterinario.Telefono" id="controls" type="text" class="form-control mb-3" placeholder="Telefono">
                <br>
                <br>
                <input asp-for="veterinario.TarjetaProfesional" id="controls" type="text" class="form-control mb-3" placeholder="Tarejta Profesional">
                <br>

                <input type="submit" class="btn btn-success" value="Editar">

            </form>
        </div>
        <div class="col-md-8">
            <div class="col-md-9">
                <br>
                <br>
                <a asp-area="" class="btn-fourth" style="background-color: rgb(55, 90, 122);"
                    asp-page="/Veterinarios/ListaVeterinarios" >Volver A Lista De Veterinarios</a>
            </div>
        </div>
    </div>
</main>

