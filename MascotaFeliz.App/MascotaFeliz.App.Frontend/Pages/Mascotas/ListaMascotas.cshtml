@page
@model MascotaFeliz.App.Frontend.Pages.ListaMascotasModel
@{
}

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/stylesFormulario.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <title>Mascotas</title>
</head>

<body>
    <br>
    <br>
    <br>
    <main class="container mt-5">
        <div class="row">
            <div class="col-md-3" id="form">
                <h1>Ingresar Nueva Mascota</h1>

                <form method="post">
                    <input type="hidden" asp-for="mascota.Id">
                    <input type="hidden" asp-for="historia.Id">
                    <input type="hidden" asp-for="historia.FechaInicial">

                    <input asp-for="mascota.Nombre" id="controls" type="text" class="form-control mb-3" placeholder="Ingrese Nombre Mascota">
                    <input asp-for="mascota.Color"  id="controls" type="text" class="form-control mb-3"  placeholder="Ingrese el color">
                    <input asp-for="mascota.Especie" id="controls" type="text" class="form-control mb-3" placeholder="Ingrese la especie">
                    <input asp-for="mascota.Raza"    id="controls" type="text" class="form-control mb-3" placeholder="Ingrese la Raza">
                    
                    <select id="dueno" asp-for="mascota.Dueno.Id" name = "duenoId" class="form-control mb-3">
                        <option value="0">Seleccione un Dueño</option>
                         @foreach (var dueno in Model.listaDuenos)
                        {
                         <option value="@dueno.Id">@dueno.Nombres @dueno.Apellidos</option>
                        }
                     </select>
        
                    <select id="veterinario" asp-for="mascota.Veterinario.Id" name = "veterinarioId" class="form-control mb-3">
                        <option value="0">Seleccione un Veterinario</option>
                        @foreach (var veterinario in Model.listaVeterinarios)
                        {
                            <option value="@veterinario.Id">@veterinario.Nombres @veterinario.Apellidos</option>
                        }
                    </select>
                    <br>
                    <input type="submit"  value="Registrar" class="btn btn-success">

                </form>
            </div>
           
            <div class="col-md-8">
                <div class="col-md-9">
                    <div class="container-img-mascota">
                        <img src="~/img/NVWQSYGX3RC7ZBEHLPLDVXA3PU_preview_rev_1.png" alt="Mascotas">
                    </div>
                    <table class="table">
                        <thead class="table-success table-striped">
                            <tr>
                                <th id="table-form">Historia #</th>
                                <th id="table-form">Nombre</th>
                                <th id="table-form">Especie</th>
                                <th id="table-form">Nombre Dueño</th>
                                <th id="table-form">Cedula Dueño</th>
                                <th id="table-form">Nombre Veterinario</th>
                                <th colspan="3" id="table-form"></th>

                            </tr>
                        </thead>
                        <tbody>

                     @foreach (var mascota in Model.listaMascotas)
                    {
                            <tr>
                                <td id="table2-form">@mascota.Historia.Id</td>
                                <td id="table2-form">@mascota.Nombre</td>
                                <td id="table2-form">@mascota.Especie</td>
                                <td id="table2-form">@mascota.Dueno.Nombres @mascota.Dueno.Apellidos</td>
                                <td id="table2-form">@mascota.Dueno.Cedula</td>
                                <td id="table2-form">@mascota.Veterinario.Nombres @mascota.Veterinario.Apellidos</td>

                                <td id="table2-form">
                                    <a class="btn btn-primary"  asp-page="./DetallesMascotas" asp-route-mascotaId="@mascota.Id">
                                        <i class="bi bi-search"></i>Detalles</a>
                                </td>

                                <td id="table2-form">
                                    <a class="btn btn-info" asp-page="./EditarMascotas" asp-route-mascotaId="@mascota.Id">
                                        <i class="bi bi-pencil-square"></i>Editar
                                    </a>
                                </td>
                                <td id="table2-form">
                                    <a class="btn btn-danger" asp-page="./ListaMascotas" asp-route-mascotaId="@mascota.Id">
                                        <i class="bi bi-trash"></i>Eliminar
                                    </a>
                                </td>
                             </tr>
                    }
                    
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</body>

